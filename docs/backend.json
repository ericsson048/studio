{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information, including their wallet data.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "balance": {
          "type": "number",
          "description": "The user's total wallet balance in USDT."
        },
        "assets": {
          "type": "array",
          "description": "A list of the user's crypto assets.",
          "items": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "string",
                "description": "The lucide-react icon name for the asset."
              },
              "name": {
                "type": "string",
                "description": "The asset's ticker symbol (e.g., ADA)."
              },
              "shortName": {
                "type": "string",
                "description": "The full name of the asset (e.g., Cardano)."
              },
              "amount": {
                "type": "number",
                "description": "The quantity of the asset owned by the user."
              },
              "value": {
                "type": "number",
                "description": "The total value of the asset holding in USD."
              }
            },
            "required": ["icon", "name", "shortName", "amount", "value"]
          }
        }
      },
      "required": [
        "displayName",
        "email",
        "balance",
        "assets"
      ]
    },
    "Subscription": {
      "title": "Subscription Plan",
      "description": "Represents a subscription plan for a service.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "icon": { "type": "string" }
      },
      "required": ["id", "name", "price", "icon"]
    },
    "UserSubscription": {
      "title": "User Subscription",
      "description": "Represents a user's subscription to a service.",
      "type": "object",
      "properties": {
        "subscriptionId": {
          "type": "string",
          "description": "The ID of the subscription plan."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user."
        },
        "startDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the subscription started."
        },
        "status": {
          "type": "string",
          "enum": ["active", "cancelled", "expired"],
          "description": "The status of the subscription."
        }
      },
      "required": ["subscriptionId", "userId", "startDate", "status"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile and wallet information for each user."
    },
    "/users/{userId}/subscriptions/{subscriptionId}": {
      "schema": {
        "$ref": "#/entities/UserSubscription"
      },
      "description": "Stores user's subscriptions."
    }
  }
}
